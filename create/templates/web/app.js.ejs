require('strong-agent').profile();

/**
 * If configured as a cluster master, just start controller.
 */

var control = require('strong-cluster-control');
var options = control.loadOptions();

if(options.clustered && options.isMaster) {
  return control.start(options);
}

/**
 * Main application
 */
<% if (express) { %>
var express = require('express');
var routes = require('./routes');
var http = require('http');
var path = require('path');

var app = express();

app.configure(function(){
  app.set('port', process.env.PORT || 3000);
  app.set('views', __dirname + '/views');
  app.set('view engine', 'ejs');
  app.use(express.favicon());
  app.use(express.logger('dev'));
  app.use(express.bodyParser());
  app.use(express.methodOverride());
  app.use(app.router);
  app.use(express.static(path.join(__dirname, 'public')));
});

app.configure('development', function(){
  app.use(express.errorHandler());
});

var options = {};
<% if (mongoose) { %>
var mongo = require('./db/mongo-store');
mongo(options);
options.mongoose = mongo.mongoose;
require('./models/user')(options);
<% } %>
routes(app, options);

http.createServer(app).listen(app.get('port'), function(){
  console.log('<%= name %> listening on port ' + app.get('port'));
});
<% } else { %>    
var options = {};
<% if (mongoose) { %>
var mongo = require('./db/mongo-store');
mongo(options);
options.mongoose = mongo.mongoose;
require('./models/user')(options);
<% } %>
console.log('Hello, <%= name %>!');
<% } %>
